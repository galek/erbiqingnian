<?xml version="1.0" encoding="utf-8"?>
<VisualStudioToolFile
	Name="FX1 Files"
	Version="8.00"
	>
	<Rules>
		<CustomBuildRule
			Name="Legacy FX Compiler"
			DisplayName="Legacy FX Compiler"
			CommandLine="&quot;$(SolutionDir)3rd Party\Utilities\$(PrimeDXSDKDir)\x86\legacy\fxc.exe&quot; /Tfx_2_0 /Vd /I$(ProjectDir)include\ [OptLvl] [Od] [Op] [AddlArgs] /nologo /DPRIME /DFXC_LEGACY_COMPILE [Output]&quot;$(SolutionDir)data[Folder]\effects\dx9\1x\$(InputName).fxo&quot; &quot;$(InputPath)&quot;"
			Outputs="$(SolutionDir)data[Folder]\effects\dx9\1x\$(InputName).fxo"
			AdditionalDependencies="$(ProjectDir)include\_Common.fx; $(ProjectDir)include\Dx9\_EnvMap.fx; $(ProjectDir)include\Dx9\_GlowShared.fx; $(ProjectDir)include\Dx9\_NoPixelShader.fx; $(ProjectDir)include\Dx9\_SphericalHarmonics.fx; $(ProjectDir)include\Dx9\_ScrollUV.fx; $(ProjectDir)include\Dx9\_AnimatedShared.fx;$(ProjectDir)include\Dx9\_Shadow.fxh; [AddlDep]"
			FileExtensions="*.fx1"
			ExecutionDescription="dx9-1x: [OptLvl][Od][Op][AddlArgs] compile: $(InputFileName)"
			>
			<Properties>
				<BooleanProperty
					Name="Od"
					DisplayName="Unoptimized"
					Category="FXC"
					Description="Should disable optimizations"
					Switch="/Od"
				/>
				<BooleanProperty
					Name="Op"
					DisplayName="No Preshaders"
					Category="FXC"
					Description="Disable preshaders"
					Switch="/Op"
				/>
				<EnumProperty
					Name="Output"
					DisplayName="Output type"
					Category="FXC"
					Description="Output type, ASM or binary"
					>
					<Values>
						<EnumValue
							Value="0"
							Switch="/Fo"
							DisplayName="Binary"
						/>
						<EnumValue
							Value="1"
							Switch="/Zi /Fc"
							DisplayName="ASM"
						/>
					</Values>
				</EnumProperty>
				<StringProperty
					Name="AddlDep"
					DisplayName="Additional Dependencies"
					Category="Misc"
					Description="Additional dependencies"
					Switch="[value]"
				/>
				<EnumProperty
					Name="Folder"
					DisplayName="Application Folder"
					Category="Misc"
					Description="Application target folder"
					>
					<Values>
						<EnumValue
							Value="0"
							Switch="_common"
							DisplayName="Common"
						/>
						<EnumValue
							Value="1"
							DisplayName="Hellgate"
						/>
						<EnumValue
							Value="2"
							Switch="_mythos"
							DisplayName="Tugboat"
						/>
					</Values>
				</EnumProperty>
				<StringProperty
					Name="AddlArgs"
					DisplayName="Addl Args"
					Category="FXC"
					Description="Additional FXC Arguments"
					Switch="[value]"
				/>
				<EnumProperty
					Name="OptLvl"
					DisplayName="Optimization Level"
					Category="FXC"
					Description="Optimization Level"
					DefaultValue="65535"
					>
					<Values>
						<EnumValue
							Value="0"
							Switch="/O0"
							DisplayName="0"
						/>
						<EnumValue
							Value="1"
							Switch="/O1"
							DisplayName="1"
						/>
						<EnumValue
							Value="2"
							Switch="/O2"
							DisplayName="2"
						/>
						<EnumValue
							Value="3"
							Switch="/O3"
							DisplayName="3"
						/>
						<EnumValue
							Value="65535"
							DisplayName="Default"
						/>
					</Values>
				</EnumProperty>
				<BooleanProperty
					Name="IncredibuildAllowRemote"
					DisplayName="IncredibuildAllowRemote"
					Category="Incredibuild"
					Description="Allow incredibuild remoting"
					DefaultValue="true"
				/>
			</Properties>
		</CustomBuildRule>
	</Rules>
</VisualStudioToolFile>
